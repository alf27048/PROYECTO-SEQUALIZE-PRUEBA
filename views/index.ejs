<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  
  <body>
    <h1><%= title %></h1>
    <%- include('./partials/nav') %>

    <ul class="listado">
      <% product.forEach(produc => { %>
        <li class="listado-item">
          <a href="/producto/<%= produc.id %>">
          <%= produc.nombre %> : <%= produc.descripcion %>
          </a>
          -
          <a href="/eliminar/<%= produc.id %>">
            ELMINAR
          </a>
        </li>

      <% }) %>
    </ul>  

             


